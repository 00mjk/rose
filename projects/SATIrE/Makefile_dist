all:
	$(MAKE) -C src

docs: handwritten-docs doxygen-docs

handwritten-docs:
	$(MAKE) -C docs

doxygen-docs:
	$(MAKE) docs -C src/grato

check:
	$(MAKE) check -C src
	@echo "-----------------"
	@echo "All checks passed"
	@echo "-----------------"

install:
	$(MAKE) install -C src

clean:
	$(MAKE) clean -C docs
	$(MAKE) clean -C src
	rm -rf dist
