all:
	$(MAKE) -C src
	$(MAKE) EXAMPLE_INSTALL_PATH=$(PWD)/examples -C examples

docs:

check:
	$(MAKE) check -C src
	$(MAKE) check -C examples
	@echo "-----------------"
	@echo "All checks passed"
	@echo "-----------------"

install:
	$(MAKE) install -C src

clean:
	$(MAKE) clean -C src
	$(MAKE) EXAMPLE_INSTALL_PATH=$(PWD)/examples clean -C examples
	rm -rf dist
