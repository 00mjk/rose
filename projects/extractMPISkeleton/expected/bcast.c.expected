#include <stdio.h>
#include "mpi.h"

int main(argc,argv)
int argc;
char **argv;
{
  int rank;
  int value;
  MPI_Init(&argc,&argv);
  MPI_Comm_rank(&ompi_mpi_comm_world,&rank);
  do {
    if (rank == 0) 
      scanf("%d",&value);
    MPI_Bcast((&value),1,&ompi_mpi_int,0,&ompi_mpi_comm_world);
  }while (value >= 0);
  MPI_Finalize();
  return 0;
}
