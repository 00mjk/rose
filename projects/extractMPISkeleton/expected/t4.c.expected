#include "mpi.h"

int main(int argc,char *argv[])
{
  int rank;
  int size;
  MPI_Init(&argc,&argv);
  MPI_Comm_rank(&ompi_mpi_comm_world,&rank);
  MPI_Comm_size(&ompi_mpi_comm_world,&size);
  int abortarg;
  abortarg = 1;
  if (size != 4) 
    MPI_Abort(&ompi_mpi_comm_world,abortarg);
  MPI_Finalize();
  return 0;
}
