#include "mpi.h"

int main(int argc,char *argv[])
{
  int rank;
  int size;
  MPI_Init(&argc,&argv);
  MPI_Comm_rank(&ompi_mpi_comm_world,&rank);
  MPI_Comm_size(&ompi_mpi_comm_world,&size);
  int x;
  int y;
  MPI_Send((&x),1,&ompi_mpi_int,(rank + 1),0,&ompi_mpi_comm_world);
  MPI_Send((&y),1,&ompi_mpi_int,(rank + 1),0,&ompi_mpi_comm_world);
  MPI_Finalize();
  return 0;
}
