#! /bin/csh

# echo "This prepares the directory for cvs import";
# echo "Preparing ROSE development for import into CVS!";

# We need to setup some links so that the FileName.lst files exist
# in the proper places for the makefiles to use their names to work properly.
cd ..; ROSE/makelinks
cd ROSE;

# GNU standard mechanism (built by automake)
# removes all files built by the autoconf, automake mechanisms
make distclean

# List of files (and links) that need to be removed before using CVS (cvs import)
# rm -f tarch

make -f makefile.build clean

# Remove all the generated source files
make -f makefile.build veryclean

# Remove files generated by configure (not Makefile.depend files)
make -f makefile.build autoconf_clean

find . -name Templates.DB -exec rm -rf {} \;
find . -name ti_files -exec rm -rf {} \;
find . -name CVS -exec rm -rf {} \;
find . -name configure -exec rm -f {} \;




